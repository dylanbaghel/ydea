{{#each ideas}}
    <div class="card mb-3">
        <div class="card-body">
            <h3>{{title}}</h3>
            <p>{{details}}</p>
            <a href="/ideas/{{id}}/edit" class="btn btn-dark btn-block mb-2">Edit</a>
            <form action="/ideas/{{id}}?_method=DELETE" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <button class="btn btn-danger btn-block">Delete</button>
            </form>
        </div>
    </div>
{{else}}
    <h3>No Ideas</h3>
{{/each}}