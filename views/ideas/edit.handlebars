{{#each errors}}
    <div class="alert alert-danger">{{text}}</div>
    {{else}}
{{/each}}

<div class="card">
    <div class="card-body">
        <h1>Edit Video Idea</h1>
        <form action="/ideas/{{idea.id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
            <div class="form-group">
                <label for="title">Title</label>
                <input required type="text" name="title" class="form-control" value="{{idea.title}}">
            </div>
            <div class="form-group">
                <label for="details">Details</label>
                <textarea required  name="details" class="form-control">{{idea.details}}</textarea>
            </div>
            <button class="btn btn-outline-primary">Submit</button>
        </form>
    </div>
</div>